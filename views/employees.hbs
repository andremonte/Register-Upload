<div class="row">
    <div class="col-md-12">
        <h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>

        <hr />
        <div class="table-responsive">
            <table class="table ">
                    <thead>
                    <tr>
                        <th>Employee&nbsp;Num</th>
                        <th>Full&nbsp;Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager&nbsp;ID</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hired&nbsp;On</th>
                    </tr>
                    </thead>
                    <tbody>
        {{#each employees}}
                        <tr>
                            <td>{{this.employeeNum}}</td>
                            <td><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                            <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                            <td>{{this.addressStreet}} {{this.addressCity}} {{this.addressState}} {{this.addressPostal}}</td>
                            <td>{{this.employeeManagerNum}}</td>
                            <td><a href="/employees?status={{this.status}}">{{this.status}}</a></td>
                            <td><a href="/employees?department={{this.department}}">{{this.department}}</a></td>
                            <td>{{this.hireDate}}
                            <a class="btn btn-danger" href="employees/delete/{{this.employeeNum}}">remove</a>
                            </td>
                        </tr>
                        {{else}}
                           
        {{/each}}
                    </tbody>
            </table>
        </div>
    </div>
    {{#unless employee}}
     <div class="col-md-12 text-center">
                                <strong>{{message}}</strong>
                            </div>
                            {{/unless}}
</div>
